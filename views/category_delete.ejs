<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1><%= title %>: <%= category.name %></h1>

    <% if (category_bikes.length) { %>
    <p>
      <strong
        >Delete the following bikes before attempting to delete this
        category.</strong
      >
    </p>
    <div style="margin-left: 20px; margin-top: 20px">
      <h4>Bikes</h4>
      <dl>
        <% category_bikes.forEach(function(bike) { %>
        <dt><a href="<%= bike.url %>"><%= bike.name %></a></dt>
        <dd><%= bike.description %></dd>
        <% }); %>
      </dl>
    </div>
    <% } else { %>
    <p>Do you really want to delete this Category?</p>
    <form method="POST" action="">
      <div class="form-group">
        <input
          id="categoryid"
          class="form-control"
          type="hidden"
          name="categoryid"
          required="true"
          value="<%= category._id %>"
        />
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
    </form>
    <% } %>
  </body>
</html>
